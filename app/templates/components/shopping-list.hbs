<h3 class="list-header" {{action 'toggleListDetail'}}>{{list.title}}</h3>
<ul>
  {{#each list.items as |item|}}
    {{shopping-list/item
      item=item
      toggleDone='toggleItemDone'
      delete='deleteItem'
    }}
  {{/each}}
  <form {{action "createItem" on="submit"}}>

    <input value={{newItem.content}}>
    <button type="submit" value="submit" name="button">submit</button>
  </form>
</ul>
